@page
@model Veterinaria.App.Frontend.Pages.EditPropietariosModel
@using Veterinaria.App.Dominio
@{
}

<h1>Editar Propietario</h1>
<form method ="post" class ="mt-3">
<input hidden asp-for = "propietario.Id">
<div class="form-group row">
    <label asp-for="propietario.documento" class ="col-sm-2">Documento</label>
    <input asp-for = "propietario.documento" class ="form-control"  required>
</div>

<div class="form-group row">
    <label asp-for="propietario.nombre" class ="col-sm-2">Nombre</label>
    <input asp-for = "propietario.nombre" class ="form-control" >
</div>

<div class="form-group row">
    <label asp-for="propietario.apellido" class ="col-sm-2">Apellido</label>
    <input asp-for = "propietario.apellido" class ="form-control" >
</div>

<div class="form-group row">
    <label asp-for="propietario.direccion" class ="col-sm-2">Dirección</label>
    <input asp-for = "propietario.direccion" class ="form-control" >
</div>

<div class="form-group row">
    <label asp-for="propietario.telefono" class ="col-sm-2">Teléfono</label>
    <input asp-for = "propietario.telefono" class ="form-control" >
</div>

<div class="form-group row">
    <label asp-for="propietario.ciudad" class ="col-sm-2">Ciudad</label>
    <input asp-for = "propietario.ciudad" class ="form-control" >
</div>

<div class="form-group row">
    <label asp-for="propietario.password" class ="col-sm-2">Password</label>
    <input asp-for = "propietario.password" class ="form-control" >
</div>

<div class="form-group row">
    <label asp-for="propietario.genero" class ="col-sm-2">Género</label>
    <div class = "col-sm-10">
        <select asp-for="propietario.genero" asp-items = "Html.GetEnumSelectList<Genero>()"></select>
    </div>
</div>

<div class="form-group row">
    <button typ="submit" class="btn btn-primary">Guardar</button>
    <a asp-page = "./ListVeterinarios" class = "btn btn-primary"> Cancelar</a>
</div>

</form>